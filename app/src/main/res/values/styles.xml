<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorRed</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/colorInputLayout</item>
        <item name="colorControlNormal">@color/colorInputLayout</item>
        <item name="colorControlActivated">@color/colorInputLayout</item>

    </style>
    <style name="TextLabelRed" parent="Theme.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="colorAccent">@color/colorRed</item>
        <item name="colorControlNormal">@color/colorRed</item>
        <item name="colorControlActivated">@color/colorRed</item>
        <item name="android:textColorHint">@color/colorGrey</item>

    </style>
    <style name="InputLayoutErrorHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="InputLayoutNormalHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="InputLayoutAcceptedHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
    </style>
</resources>
