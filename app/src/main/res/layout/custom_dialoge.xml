<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Old Password"
            app:hintTextAppearance="@style/TextLabelRed"
            android:id="@+id/dialoge_alert_oldPass_text">

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:textColorHint="@color/colorRed"
                android:theme="@style/TextLabelRed"
              android:id="@+id/oldPass_Edittext"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            app:hintTextAppearance="@style/TextLabelRed"
            android:id="@+id/dialoge_alert_newPass_text">

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:textColorHint="@color/colorRed"
                android:theme="@style/TextLabelRed"
                android:id="@+id/newPass_editText"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            app:hintTextAppearance="@style/TextLabelRed"
            android:id="@+id/dialoge_alert_confirmPass_text">

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:textColorHint="@color/colorRed"
                android:theme="@style/TextLabelRed"
                android:id="@+id/confirmPass_editText"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_dialog_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/dialogsavebtn"
            android:text="SAVE"
            android:textColor="@color/colorInputLayout" />
    </LinearLayout>

</LinearLayout>