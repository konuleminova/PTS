<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    >
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/recycler_relativeLayout">
        <ImageView
            android:id="@+id/imgName"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sharp_round_icon"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTS-175"
            android:layout_toRightOf="@+id/imgName"
            android:textSize="17sp"
            />
        <ImageView
            android:id="@+id/imgLocation"
            android:layout_below="@+id/imgName"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/location_round_icon"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:id="@+id/loaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topaz Khatai"
            android:layout_toRightOf="@+id/imgLocation"
            android:textSize="17sp"
            android:layout_below="@+id/imgName"
            />
        <ImageView
            android:id="@+id/imgTime"
            android:layout_below="@+id/imgLocation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/date_time_icon"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.12.2017-12:34"
            android:layout_toRightOf="@+id/imgLocation"
            android:textSize="17sp"
            android:layout_below="@+id/imgLocation"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow_point_to_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/nextbtn"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>